rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write for all shops and menu items during development
    match /shops/{shopId}/{document=**} {
      allow read, write: if true;
    }

    // Allow everything else in development
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

